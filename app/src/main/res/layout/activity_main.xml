<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhongyu.myapplication.activity.MainActivity">

   <Button
       android:text="饼图"
       android:onClick="pinChart"
       android:layout_marginLeft="15dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <com.example.zhongyu.myapplication.customview.pinChart
       android:visibility="gone"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />


   <com.example.zhongyu.myapplication.customview.LinearGradlent
       android:visibility="gone"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

   <com.example.zhongyu.myapplication.customview.Xfermode
       android:background="@color/colorAccent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

</LinearLayout>
